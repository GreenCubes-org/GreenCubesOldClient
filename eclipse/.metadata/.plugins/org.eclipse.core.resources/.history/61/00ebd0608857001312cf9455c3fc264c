package net.minecraft.src;

public class ItemCounter extends Item {

	public ItemCounter(int i) {
		super(i);
		setMaxStackSize(1);
	}
	
	@Override
	public String getTranslatedName(ItemStack itemstack) {
		String name = new StringBuilder().append(StringTranslate.getInstance().translateNamedKey(getUntranslatedName(itemstack))).toString().trim();
		switch(itemstack.itemDamage) {
		case 1:
			name += "- Булыжника добыто";
			break;
		case 2:
			name += "- Алмазов добыто";
			break;
		case 3:
			name += "- Ростков сакуры получено";
			break;
		case 4:
			name += "- Светопыли добыто";
			break;
		case 5:
			name += "- Фейерверков запущено";
			break;
		case 6:
			name += "- Листвы получено";
			break;
		case 7:
			name += "- Красной пыли добыто";
			break;
		case 8:
			name += "- Железной руды добыто";
			break;
		case 9:
			name += "- Золотой руды добыто";
			break;
		case 10:
			name += "- Лазурита добыто";
			break;
		case 11:
			name += "- Дерева срублено";
			break;
		}
		return name;
	}

}
